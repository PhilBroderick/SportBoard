@model SportBoard.Web.Models.HistoricalModels.UserHistory
@{
    ViewBag.Title = "History";
}

@if (Model.Feeds.Count > 0)
{
    <h3>Feeds</h3>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Feed Name")
                </th>
                <th>
                    @Html.DisplayName("Image")
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @{ var feeds = Model.Feeds;}
                @foreach (var feed in feeds)
                {
                <tr>
                    <td>@Html.ActionLink(feed.FeedName, "Details", "Feed", new { id = feed.FeedId }, new { @style = "font-size: 25px;" })</td>
                    <td style="text-align: center;"><img src="@Url.Content("~/Content/Images/" + feed.Image.FileName + ".jpg")" style="max-height:300px;"></td>
                </tr>
            }
                </tr>
            </tbody>
        </table>
    }

@if (Model.Posts.Count > 0)
{
    <h3>Posts</h3>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Feed Name")
                </th>
                <th>
                    @Html.DisplayName("Post Description")
                </th>
                <th>
                    @Html.DisplayName("Post Photo")
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @{ var posts = Model.Posts;}
                @foreach (var post in posts)
                {
                <tr>
                    <td>@Html.ActionLink(post.Feed.FeedName, "Details", "Feed", new { id = post.FeedId }, new { @style = "font-size: 25px;" })</td>
                    <td><p>@post.Description</p></td>
                    <td style="text-align: center;"><img src="@Url.Content("~/Content/Images/" + post.Image.FileName + ".jpg")" style="max-height:300px;"></td>
                </tr>
            }
                </tr>
            </tbody>
        </table>
    }

@if (Model.Comments.Count > 0)
{
    <h3>Comments</h3>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Post Description")
                </th>
                <th>
                    @Html.DisplayName("Comment")
                </th>
                <th>
                    @Html.DisplayName("Upvotes")
                </th>
                <th>
                    @Html.DisplayName("Downvotes")
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @{ var comments = Model.Comments;}
                @foreach (var comment in comments)
                {
                <tr>
                    <td>@Html.ActionLink(comment.Post.Description, "Details", "Post", new { id = comment.PostId }, new { @style = "font-size: 25px;" })</td>
                    <td><p>@comment.CommentText</p></td>
                    <td><p>@comment.CommentUpvoteUserIds.Count</p></td>
                    <td><p>@comment.CommentDownVoteUserIds.Count</p></td>
                </tr>
            }
                </tr>
            </tbody>
        </table>
    }

@if (Model.DeletionRequests.Count > 0)
{
    <h3>Deletion Requests</h3>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Feed Requested for Deletion")
                </th>
                <th>
                    @Html.DisplayName("Reason for Deletion")
                </th>
                <th>
                    @Html.DisplayName("Request Fulfilled")
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @{ var requests = Model.DeletionRequests;}
                @foreach (var request in requests)
                {
                <tr>
                    <td>@Html.ActionLink(request.Feed.FeedName, "Details", "Feed", new { id = request.FeedId }, new { @style = "font-size: 25px;" })</td>
                    <td><p>@request.ReasonForDeletion</p></td>
                    <td><p>@request.RequestFulfilled</p></td>
                </tr>
            }
                </tr>
            </tbody>
        </table>
    }