@model SportBoard.Web.Models.ViewModels.FeedPostViewModel
@{
    /**/

    ViewBag.Title = "Details";
    ViewBag.HotSortParm = "hot";
    ViewBag.NewSortParm = "new";
    ViewBag.BestSortParm = "best";
}

<h2>@Model.Feed.FeedName</h2>
<div class="row">
    <div class="col-md-12" id="mainImageDiv">
        <img src="@Url.Content("~/Content/images/" + @Model.Feed.Image.FileName + ".jpg")" alt="Feed Image" id="mainImage" />
    </div>
    <div class="col-md-12">
        <p><a class="btn btn-primary addPost" href="@Url.Action("Create","Post" , new { feedId = Model.Feed.FeedId })">Add Post to Feed &raquo;</a></p>
    </div>
</div>
<div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span id="selected">Sort</span>
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li class="hot"><a href="#"><i class="fas fa-fire"></i>Hot</a></li>
        <li class="new"><a href="#"><i class="fab fa-earlybirds"></i>New</a></li>
        <li class="best"><a href="#"><i class="fas fa-certificate"></i>Best</a></li>
    </ul>
</div>

@if (Model.Posts.Count != 0)
{
    <div class="row postsView">
        @Html.Partial("~/Views/Post/Posts.cshtml", Model.Posts)
    </div>

}
else
{
    <h4>There doesn't seem to be any posts in this feed yet. How about you be the first contributor?</h4>
}



@section Styles{
    <style>
        #mainImageDiv {
            text-align: center;
        }

        div img {
            margin-bottom: 30px;
            width: 100%;
        }

        h2 {
            text-align: center;
            text-transform: uppercase;
        }

        div p {
            text-align: center;
        }

        .card {
            /* Add shadows to create the "card" effect */
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            padding: 10px 10px;
        }

            /* On mouse-over, add a deeper shadow */
            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        /* Add some padding inside the card container */
        .container {
            padding: 2px 16px;
        }

        .card img {
            width: 100%;
        }

        .addPost {
            margin-top: 10px;
        }
    </style>
}


@section scripts{
    <script>

        $(document).ready(function () {
            $("#form").on("submit", function (e) {
                e.preventDefault()
                var formData = new FormData();
                var totalFiles = document.getElementById("imageUploadForm").files.length;
                var textInput = $("#textInput").val();
                var feedId = @Model.Feed.FeedId;
                formData.append("textInput", textInput);
                formData.append("feedId", feedId);

                for (var i = 0; i < totalFiles; i++) {
                    var file = document.getElementById("imageUploadForm").files[i];
                    formData.append("imageUploadForm", file);
                }
                $.ajax({
                    type: "POST",
                    url: '/Post/Create',
                    data: formData,
                    dataType: 'json',
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        window.location.href = response.Url;
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        alert("Unknown error occured. Please try again!");
                    }
                });
            });
        });

        $('.dropdown-menu a').click(function () {
            var logo = $(this).find('i')[0];
            console.log(logo);

            $('#selected').text($(this).text());
        });

        $('.hot').click(function () {

            $.ajax({
                url: '@Url.Action("SortPostOrder", "Post", new {sortOrder = ViewBag.HotSortParm })',
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('.feedView').html(data);
                }
            })
        });

        $('.new').click(function () {

            $.ajax({
                url: '@Url.Action("SortPostOrder", "Post", new {sortOrder = ViewBag.NewSortParm })',
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('.feedView').html(data);
                }
            })
        });

        $('.best').click(function () {

            $.ajax({
                url: '@Url.Action("SortPostOrder", "Post", new {sortOrder = ViewBag.BestSortParm })',
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('.feedView').html(data);
                }
            })
        });
    </script>
}


