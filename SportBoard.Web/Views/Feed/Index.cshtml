@model List<SportBoard.Data.DAL.Feed>
@{
    ViewBag.Title = "Home Page";
    ViewBag.DailySortParm = "daily";
    ViewBag.WeeklySortParm = "weekly";
    ViewBag.MonthlySortParm = "monthly";
    ViewBag.HotSortParm = "hot";
    ViewBag.NewSortParm = "new";
    ViewBag.BestSortParm = "best";
}

<div class="jumbotron">
    <h1>SportBoard</h1>
    <p class="lead">SportBoard allows users with similar interests to post related photos and discuss, like and dislike these photos.</p>
</div>
<div class="col-md-12">
    <ul class="nav nav-tabs">
        <li role="presentation" class="today active"><a href="#">Today</a></li>
        <li role="presentation" class="lastWeek"><a href="#">Last Week</a></li>
        <li role="presentation" class="lastMonth"><a href="#">Last Month</a></li>
    </ul>
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Sort
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li class="hot"><a href="#">Hot</a></li>
            <li class="new"><a href="#">New</a></li>
            <li class="best"><a href="#">Best</a></li>
        </ul>
    </div>
</div>
<div class="row feedView">
    @Html.Partial("Feeds", Model)
</div>

@section Styles{
    <style>
        .card {
            /* Add shadows to create the "card" effect */
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            padding: 10px 10px;
        }

            /* On mouse-over, add a deeper shadow */
            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        /* Add some padding inside the card container */
        .container .headerTitle{
            padding: 1px 16px;
            width: 100%;
        }

        .card img{
            width: 100%;
        }

        .container h4{
            text-align:center;
            text-transform:uppercase;
            font-weight: 700;
        }
    </style>    
}

@section Scripts {

    <script>
        var todaySort = $('.today');
        var weeklySort = $('.lastWeek');
        var monthlySort = $('.lastMonth');

        $('.today').click(function () {
            weeklySort.removeClass('active');
            monthlySort.removeClass('active');
            todaySort.addClass('active');

            $.ajax({
                url: '@Url.Action("FilterFeeds", "Feed", new { filterOrder = ViewBag.DailySortParm })',
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('.feedView').html(data);
                }
            })
        });

        $('.lastWeek').click(function () {
            todaySort.removeClass('active');
            monthlySort.removeClass('active');
            weeklySort.addClass('active');

            $.ajax({
                url: '@Url.Action("FilterFeeds", "Feed", new { filterOrder = ViewBag.WeeklySortParm })',
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('.feedView').html(data);
                }
            })
        });

        $('.lastMonth').click(function () {
            todaySort.removeClass('active');
            weeklySort.removeClass('active');
            monthlySort.addClass('active');

            $.ajax({
                url: '@Url.Action("FilterFeeds", "Feed", new { filterOrder = ViewBag.MonthlySortParm })',
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('.feedView').html(data);
                }
            })
        });

        $('.hot').click(function () {

            $.ajax({
                url: '@Url.Action("SortFeeds", "Feed", new {sortOrder = ViewBag.HotSortParm})',
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('.feedView').html(data);
                }
            })
        });

        $('.new').click(function () {

            $.ajax({
                url: '@Url.Action("SortFeeds", "Feed", new {sortOrder = ViewBag.NewSortParm})',
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('.feedView').html(data);
                }
            })
        });

        $('.best').click(function () {

            $.ajax({
                url: '@Url.Action("SortFeeds", "Feed", new {sortOrder = ViewBag.BestSortParm})',
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('.feedView').html(data);
                }
            })
        });

    </script>    
}