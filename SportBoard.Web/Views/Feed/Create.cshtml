<div class="input-group">
    <input type="text" id="feedName" class="form-control" placeholder="Feed Name" aria-describedby="basic-addon1" name="feedName">
</div>
<input type="file" id="imageUploadForm" name="image" accept="image/*" />
<div class="form-group">
    <div class="col-md-10">
        <input type="submit" value="Create Feed" class="btn btn-success" id="submit"/>
    </div>
</div>

@section scripts{
    <script>

        $(document).ready(function () {
            $("#submit").on("click", function () {
                var formData = new FormData();
                var totalFiles = document.getElementById("imageUploadForm").files.length;
                var feedName = $("#feedName").val();
                formData.append("feedName", feedName);

                if (totalFiles == 0) {
                    debugger;
                    alert("Must select a file to upload!");
                }

                for (var i = 0; i < totalFiles; i++) {
                    var file = document.getElementById("imageUploadForm").files[i];
                    formData.append("imageUploadForm", file);
                }
                $.ajax({
                    type: "POST",
                    url: '/Feed/Create',
                    data: formData,
                    dataType: 'json',
                    contentType: false,
                    processData: false
                }).done(function () {
                    alert('success');
                });
            });
        });
    </script>
}


